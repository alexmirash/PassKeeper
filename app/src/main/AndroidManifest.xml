<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mirash.passkeeper">

    <application
        android:name=".PassKeeperApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PassKeeper">
        <activity
            android:name=".activity.LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.main.MainActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.edit.CredentialsEditActivity"
            android:exported="false" />
        <activity
            android:name=".activity.pin.PinCodeEnterActivity"
            android:exported="false"
            android:theme="@style/Theme.Fullscreen" />
        <activity
            android:name=".activity.pin.PinCodeCreateActivity"
            android:exported="false"
            android:theme="@style/Theme.Fullscreen" />
        <activity
            android:name=".activity.pin.PinCodeConfirmActivity"
            android:exported="false"
            android:theme="@style/Theme.Fullscreen" />
        <activity
            android:name=".activity.pin.PinCodeEnterCurrentActivity"
            android:exported="false"
            android:theme="@style/Theme.Fullscreen" />

    </application>

</manifest>