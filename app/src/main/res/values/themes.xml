<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PassKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>