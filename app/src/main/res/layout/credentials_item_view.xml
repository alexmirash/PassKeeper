<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/side_padding"
        android:layout_marginTop="@dimen/side_padding"
        android:layout_marginBottom="@dimen/half_padding"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/item_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_default_selector"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/item_link_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_link_selector"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="italic"
                />
            <TextView
                android:id="@+id/item_details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/quarter_padding"
                android:textColor="@color/text_color_details"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>
        <!--login/email/phone-->
        <com.mirash.familiar.activity.pin.view.LoginView
            android:id="@+id/item_login_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/side_padding"
            android:layout_marginBottom="@dimen/quarter_padding"
            />
        <!--password-->
        <LinearLayout
            android:id="@+id/item_password_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_padding"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/icon_size_default"
                android:layout_height="@dimen/icon_size_default"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/small_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_fish_skeleton"
                />
            <TextView
                android:id="@+id/item_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_size_default"
                />
        </LinearLayout>
        <!--pin-->
        <LinearLayout
            android:id="@+id/item_pin_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_padding"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/icon_size_default"
                android:layout_height="@dimen/icon_size_default"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/small_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cat_footprint_20"
                />
            <TextView
                android:id="@+id/item_pin_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_size_default"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/half_padding"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/half_padding"
            android:src="@drawable/ic_share"
            />
        <ImageView
            android:id="@+id/item_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"
            android:src="@drawable/ic_edit_note"
            />
    </LinearLayout>
    <CheckBox
        android:id="@+id/item_password_visibility_checkbox"
        android:layout_width="@dimen/icon_size_default_with_padding"
        android:layout_height="@dimen/icon_size_default_with_padding"
        android:layout_gravity="end|bottom"
        android:background="?attr/selectableItemBackground"
        android:button="@null"
        android:buttonTint="@color/color_primary"
        android:drawableStart="@drawable/visibility_checkbox"
        android:gravity="center"
        android:padding="@dimen/half_padding"
        />
</FrameLayout>